\usepackage[natbib=true, bibstyle=authoryear, sorting=none, citestyle=numeric]{biblatex}
\setbeamercolor*{bibliography entry title}{fg=text}
\setbeamercolor*{bibliography entry author}{fg=text}
\setbeamercolor*{bibliography entry location}{fg=text}
\setbeamercolor*{bibliography entry note}{fg=text}
\setbeamercolor*{bibliography item}{fg=text}
\setbeamertemplate{bibliography item}{\insertbiblabel}
\WarningFilter{biblatex}{Patching footnotes failed}
\DeclareFieldFormat{labelnumberwidth}{\mkbibbrackets{#1}}
\defbibenvironment{bibliography}
  {%
    \list
    {%
      \printtext[labelnumberwidth]{%
        \printfield{labelprefix}%
        \printfield{labelnumber}%
      }%
    }%
    {%
      \setlength{\labelwidth}{\labelnumberwidth}%
      \setlength{\leftmargin}{\labelwidth}%
      \setlength{\labelsep}{0.5ex}%{\biblabelsep}%
      \addtolength{\leftmargin}{\labelsep}%
      \setlength{\itemsep}{\bibitemsep}%
      \setlength{\parsep}{\bibparsep}%
    }%
    \renewcommand*{\makelabel}[1]{\hss##1}%
  }%
  {\endlist}
  {\item}
  \AtEveryCite{\color{kau-dark-grey}}

  \setbeamercolor{caption name}{fg=Black}